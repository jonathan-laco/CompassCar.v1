datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  id    Int       @id @default(autoincrement())
  brand String
  model String
  year  Int
  items CarItem[] @relation("CarItems")

  @@unique([brand, model, year])
}

model CarItem {
  id    Int    @id @default(autoincrement())
  name  String
  carId Int
  car   Car    @relation("CarItems", fields: [carId], references: [id], onDelete: Cascade)

  @@unique([name, carId])
}
